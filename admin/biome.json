{
  "$schema": "https://biomejs.dev/schemas/1.2.2/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 120,
    "indentSize": 2
  },
  "linter": {
    "enabled": true,
    "ignore": [
      "node_modules"
    ],
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      },
      "correctness": {
        "noUnusedVariables": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "all",
      "semicolons": "asNeeded"
    }
  },
  "files": {
    "ignore": [
      "src/api/**/*.ts",
      "src/common/schemas-to-ts/**/*.ts",
      "src/components/**/*.ts"
    ]
  }
}