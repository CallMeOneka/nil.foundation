server {
		server_name {{ site_admin_domain }};
		location / { 
						proxy_pass http://127.0.0.1:{{ site_admin_port }}/;
						client_max_body_size 20M;
		}
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/{{ site_admin_domain }}/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/{{ site_admin_domain }}/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}
server {
    if ($host = {{ site_admin_domain }}) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


		server_name {{ site_admin_domain }};
		listen 80;
    return 404; # managed by Certbot
}